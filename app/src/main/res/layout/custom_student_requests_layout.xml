<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:id="@+id/card_view"
    app:cardCornerRadius="@dimen/_8sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/dinregular"
            android:text="محمد عبدالله"
            android:textColor="@color/blue"
            app:drawableStartCompat="@drawable/user" />



        <TextView
            android:id="@+id/institute_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_8sdp"
            android:layout_below="@id/name_tv"
            android:fontFamily="@font/dinregular"
            android:text="جامعة طيبة"
            android:textColor="@color/purple"
            app:drawableStartCompat="@drawable/school" />





        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_toEndOf="@id/name_tv"
            android:orientation="horizontal">


            <Button
                android:id="@+id/accept_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/dinregular"
                android:text="@string/accept"
                android:textAllCaps="false"
                android:textSize="@dimen/_10ssp" />

            <Button
                android:id="@+id/reject_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_grey"
                android:fontFamily="@font/dinregular"
                android:text="@string/reject"
                android:textAllCaps="false"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11010367263"
            android:fontFamily="@font/dinregular"
            android:textColor="@color/black"
            android:layout_below="@id/institute_tv"
            android:id="@+id/number_tv"/>

    </RelativeLayout>




</androidx.cardview.widget.CardView>