<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".admin.home.fragments.AdminHomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >


        <androidx.cardview.widget.CardView
            android:id="@+id/educational_institution_card"
            android:layout_width="143dp"
            android:layout_height="120dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="40dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/program_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/school"
                app:tint="#2A6EBB" />

            <TextView
                android:id="@+id/activity_cme_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/educational_institutions_requests"
                android:textColor="#1E1656"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/vehicle_request_card"
            android:layout_width="143dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="27dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/car"
                app:tint="#2A6EBB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/vehicle_requests"
                android:textColor="#1E1656"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/driver_request_card"
            android:layout_width="143dp"
            android:layout_height="120dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="19dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/educational_institution_card">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/students"
                app:tint="#2A6EBB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/drivers_requests"
                android:textColor="#1E1656"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/student_request_card"
            android:layout_width="143dp"
            android:layout_height="120dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="27dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vehicle_request_card">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/students"
                app:tint="#2A6EBB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/students_requests"
                android:textColor="#1E1656"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/company_driver_request_card"
            android:layout_width="143dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_request_card">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/direction_bus"
                app:tint="#2A6EBB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/companies_drivers_request"
                android:textColor="#1E1656"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>