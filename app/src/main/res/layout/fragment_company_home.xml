<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.fragments.CompanyHomeFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/dinregular"
        android:text="@string/student_and_teachers_requests"
        android:textColor="@color/purple"
        android:textSize="@dimen/_14ssp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_ic"
            android:layout_centerVertical="true"
            android:id="@+id/add_img"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/add_driver_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_toEndOf="@id/add_img"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_centerVertical="true"
            android:text="@string/add_driver"
            />
        <Button
            android:id="@+id/my_drivers_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dinregular"
            android:text="@string/my_drivers"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false" />





    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/student_teacher_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        />
</LinearLayout>